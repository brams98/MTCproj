<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2ca1c7">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Applikasi : " />


    <TextView
        android:id="@+id/tvNameApplication_ListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi Singkat : " />

    <TextView
        android:id="@+id/tvDeskripsiSingkat_ListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:shadowColor="#606263"
        android:shadowDx="1000"
        android:shadowDy="200"
        android:text="Play Store"
        android:id="@+id/btnPlayStore_ListView"/>


</LinearLayout>